        public static Vector[] ArvoPisteet(int n, double x1, double y1, double x2, double y2)
        {
            Vector[] pisteet = new Vector[n];
            for (int i = 0; i < n; i++)
            {
                double x = RandomGen.NextDouble(x1, x2);
                double y = RandomGen.NextDouble(y1, y2);
                pisteet[i] = new Vector(x, y);
            }
            return pisteet;
        }

